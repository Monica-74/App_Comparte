<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragmentHabitacion"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- RecyclerView con la lista de habitaciones -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerHabitaciones"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:visibility="visible" />

    <FrameLayout
        android:id="@+id/layoutSinAnuncios"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

    <!-- Layout vacío, se mostrará si no hay anuncios -->
    <include layout="@layout/fragment_sin_anuncios"/>
        </FrameLayout>

</FrameLayout>
