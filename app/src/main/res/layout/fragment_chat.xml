<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".fragments.ChatFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Primer mensaje -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="14dp"
            android:background="@color/colorSecundario"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvMensaje1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hola_como_estas"
                android:textColor="@color/color_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFecha1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/_14_mayo_2025_10_45"
                android:textColor="@color/color_text"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Segundo mensaje -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="12dp"
            android:background="@color/colorAccentSecundario"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvMensaje2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/muy_bien_gracias"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFecha2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/_14_mayo_2025_10_46"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <!--        tercer mensaje-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="14dp"
            android:background="@color/colorSecundario"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvMensaje3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/perfecto"
                android:textColor="@color/color_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFecha3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/_14_mayo_2025_10_50"
                android:textColor="@color/color_text"
                android:textSize="14sp" />
        </LinearLayout>

        <!--        cuarto mensaje-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="12dp"
            android:background="@color/colorAccentSecundario"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvMensaje4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seguro_que_se_van"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFecha4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/_14_mayo_2025_15_06"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
        <!-- quinto  mensaje-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="14dp"
            android:background="@color/colorSecundario"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvMensaje5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/entonces_voy_a_reservar"
                android:textColor="@color/color_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFecha5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/_14_mayo_2025_20_30"
                android:textColor="@color/color_text"
                android:textSize="14sp" />
        </LinearLayout>
        <!--        sexto  mensaje-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="12dp"
            android:background="@color/colorAccentSecundario"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvMensaje6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/genial_haz_la_reserva"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFecha6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/_14_mayo_2025_20_46"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
