<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".fragments.DetalleHabitacionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="0dp"
        android:gravity="center_horizontal">

        <!-- ENCABEZADO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/logo_principal"
                android:contentDescription="@string/logo"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comparte_habitacion"
                android:textStyle="bold"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- CONTENIDO DETALLADO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Título"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingBottom="8dp" />

            <TextView android:id="@+id/tvDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción"
                android:paddingBottom="8dp" />

            <TextView android:id="@+id/tvDireccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección"
                android:paddingBottom="8dp" />

            <TextView android:id="@+id/tvPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio"
                android:paddingBottom="8dp" />

            <TextView android:id="@+id/tvCaracteristicaCama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cama"
                android:paddingBottom="8dp" />

            <TextView android:id="@+id/tvCaracteristicaBano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baño"
                android:paddingBottom="8dp" />

            <TextView android:id="@+id/tvCaracteristicaTamano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tamaño"
                android:paddingBottom="8dp" />

            <TextView android:id="@+id/tvTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo"
                android:paddingBottom="8dp" />

            <ImageView
                android:id="@+id/ivDetalleImagen"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnModificar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="24dp"
                android:text="MODIFICAR"
                android:textSize="18sp"
                android:visibility="gone"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="24dp"
                android:text="ELIMINAR"
                android:textSize="18sp"
                android:visibility="gone"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnVolver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/volver"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="24dp"
                android:textSize="26sp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@android:color/white" />


        </LinearLayout>

        <!-- PIE DE PÁGINA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tlf_902_666_999"
                android:textSize="12sp"
                android:textColor="@color/color_text"
                android:textStyle="bold"
                android:paddingBottom="4dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/politica_privacidad"
                    android:textSize="12sp"
                    android:textColor="@color/color_text"
                    android:textStyle="bold"
                    android:paddingEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/politica_cookies"
                    android:textSize="12sp"
                    android:textColor="@color/color_text"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/logo_principal"
                android:contentDescription="@string/logo"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email_contacto_hola_comparte_es"
                android:textSize="12sp"
                android:textColor="@color/color_text"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
